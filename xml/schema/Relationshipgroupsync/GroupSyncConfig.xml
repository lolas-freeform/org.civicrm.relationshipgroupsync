<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Relationshipgroupsync</base>
  <class>GroupSyncConfig</class>
  <name>civicrm_groupsyncconfig</name>
  <comment>Configuration records for Group Sync setup</comment>
  <add>4.5</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique GroupSyncConfig ID</comment>
    <add>4.5</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_type</name>
    <type>varchar</type>
    <length>64</length>
    <required>true</required>
    <comment>Contact Type</comment>
    <add>4.5</add>
  </field>
  <field>
    <name>contact_sub_type</name>
    <type>varchar</type>
    <length>64</length>
    <required>true</required>
    <comment>Contact Sub Type</comment>
    <add>4.5</add>
  </field>
  <field>
    <name>relationship_type_id</name>
    <title>Relationship Type</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>The relationship type associated with these relationships.</comment>
    <add>4.5</add>
  </field>
  <field>
    <name>relationship_direction</name>
    <title>Relationship Direction</title>
    <type>varchar</type>
    <length>4</length>
    <required>true</required>
    <comment>The relationship direction associated with these relationships.</comment>
    <add>4.5</add>
  </field>
  <field>
    <name>group_type</name>
    <type>varchar</type>
    <length>64</length>
    <required>true</required>
    <comment>Group Type string with value separator</comment>
    <add>4.5</add>
  </field>
  <field>
    <name>description</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <comment>Group description</comment>
    <add>4.5</add>
  </field>
  <field>
    <name>is_active</name>
    <type>boolean</type>
    <title>Enabled</title>
    <default>1</default>
    <required>true</required>
    <comment>Is this group setup enabled?</comment>
    <add>4.4</add>
  </field>

</table>
